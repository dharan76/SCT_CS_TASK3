import re

def check_password_strength(password):
    score = 0
    remarks = []

    # Criteria checks
    length = len(password)
    if length >= 8:
        score += 1
    else:
        remarks.append("âŒ Too short (min 8 characters)")

    if re.search(r"[A-Z]", password):
        score += 1
    else:
        remarks.append("âŒ No uppercase letter")

    if re.search(r"[a-z]", password):
        score += 1
    else:
        remarks.append("âŒ No lowercase letter")

    if re.search(r"[0-9]", password):
        score += 1
    else:
        remarks.append("âŒ No digit")

    # Updated regex for special characters to include more options
    if re.search(r"[!@#$%^&*(),.?\":{}|<>]", password):
        score += 1
    else:
        remarks.append("âŒ No special character")

    # Feedback based on score
    if score == 5:
        strength = "ğŸŸ¢ Very Strong"
    elif score == 4:
        strength = "ğŸŸ¡ Strong"
    elif score == 3:
        strength = "ğŸŸ  Medium"
    else:
        strength = "ğŸ”´ Weak"

    return strength, remarks

# ===== Usage Example =====
if __name__ == "__main__":
    pwd = input("Enter your password: ")
    strength, feedback = check_password_strength(pwd)
    print(f"\nPassword Strength: {strength}")
    if feedback:
        print("Feedback:")
        for comment in feedback:
            print(f"- {comment}")
